  "main": "src/index.js",
  "scripts": {
    "start": "npm run migrate && node src/index.js",
    "dev": "NODE_ENV=dev npm run migrate && node src/index.js",
    "prod": "NODE_ENV=prod npm run migrate && node src/index.js",
    "create-env": "cp .env-template .env",
    "migrate": "knex migrate:latest",
    "test": "mocha src/test/worker.test.js",
    "sol-cover": "npx truffle run coverage",
    "prepare-contracts-for-remix": "npx truffle-flattener ./contracts/HarmonyBridge.sol > ./build/HarmonyBridge.sol && npx truffle-flattener ./contracts/EdgewareToken.sol > ./build/EdgewareToken.sol",
    "compile-contracts": "rm -rf ./build && npx truffle compile",
    "migrate-in-harmony-testnet": "npx truffle migrate --network testnet --reset && truffle networks",
    "tests-in-harmony": "npx truffle test",
    "gan-cli": "npx ganache-cli -m 'puzzle crazy electric wide verify popular struggle latin genuine lawsuit thrive neck'"
  },
